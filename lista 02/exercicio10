import java.util.Scanner;
import java.io.IOException;
public class Main {
 
    public static void main(String[] args) throws IOException {
 
        int a, b;
		double c, res;
		Scanner leitor = new Scanner(System.in);
		a = leitor.nextInt();
		b = leitor.nextInt();
		c = leitor.nextDouble();
		res = b * c;
		
		a = leitor.nextInt();
		b = leitor.nextInt();
		c = leitor.nextDouble();
		res += b * c;
		
		System.out.printf("VALOR A PAGAR: R$ %.2f\n", res);
 
    }
 
}
